<body style=" background-color:white"> @*style = "background:url('../../Images/1920x1080.jpg') center no-repeat" >*@
    @*style="background:url('../../Images/SignUp.jpg') center no-repeat ">*@

    <script src="~/Content/Login Popup/login-signup-modal-window/js/main.js"></script>



    <div id="header">

        <div class="container">
            <div style="margin-left:150px;  border-color:#000000;border-radius:6px;padding:10px;opacity:0.9; border-color:white;border:5px solid;">
                <div class="row">
                    <!-- background-color:#000000;border:5px solid;-->>

                    <p style="font-size:45px; font-weight: bolder; text-align:center; text-underline-position:auto"> User Profile </p>
                    <div class="col-md-4">
                        <form method="post" action="~/Users/EditPhoto/@user.UserID">
                            <table style="width:5000px">
                                <tbody>
                                    <tr>
                                        <td>
                                            <!--class="img-responsive img-rounded"-->>
                                            <br> <img class="circular" src="@Url.Content("~/FFIles/"+ user.ProfilePicture)" style="width:200px; height:200px;border-radius: 150px;">

                                            @*<input type="submit" style="margin-left:6px;  border:2px solid;border-radius:6px;background-color:white;color:orange; font-weight:bold; border-radius:5px; border-color:#ff6a00;" value="Profile Picture">*@

                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                    <div class="col-md-7">
                        <form name="htmlform" method="post" action="~/Users/EditItem/@user.UserID">
                            <table style="width:500px">
                                <tbody>

                                    <tr>


                                        <td>
                                            <label for="first_name">First Name :</label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="first_name" maxlength="50" size="30">*@
                                            <label for="first_name">@user.FirstName </label>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td valign="top">
                                            <label for=" last_name">Last Name </label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="last_name" maxlength="50" size="30">*@
                                            <label for="first_name">@user.LastName </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top">
                                            <label for="email">Email Address </label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="email" maxlength="80" size="30">*@
                                            <label for="first_name">@user.Email</label>
                                        </td>

                                    </tr>

                                    <tr>
                                        <td valign="top">
                                            <label for="telephone">WorkPlace</label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="telephone" maxlength="30" size="30">*@
                                            <label for="first_name">@user.WorkPlace</label>
                                        </td>
                                    </tr>



                                    <tr>
                                        <td valign="top">
                                            <label for="telephone">Studied AT</label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="telephone" maxlength="30" size="30">*@
                                            <label for="first_name">@user.StudiedAt</label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="top">
                                            <label for="telephone">Country</label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="telephone" maxlength="30" size="30">*@
                                            <label for="first_name">@user.Country</label>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td valign="top">
                                            <label for="telephone">Mobile No</label>
                                        </td>
                                        <td valign="top">
                                            @*<input type="text" style="border:1px solid;border-radius:6px; border-color:#ff6a00;" name="telephone" maxlength="30" size="30">*@
                                            <label for="first_name"">@user.Mobile</label>
                                        </td>
                                    </tr>


                                    <tr></tr>
                                    <tr>


                                        <td colspan="2" style="text-align:left">
                                            <input type="submit" style=" border:2px solid;border-radius:6px;background-color:white;color:red; font-weight:bold; border-radius:5px; border-color:#ff0000;" value="EDIT">
                                        </td>
                                        <td></td>
                                    </tr>
                                    <tr></tr>
                                    <tr></tr>
                                    <tr>

                                        <td colspan="4" style="text-align:center">
                                            <a href="/Users/Back" type="submit" style="border:3px solid;border-radius:9mm;background-color:white;color:blue; font-weight:bold;border-color:#0026ff;" value="Back"> Back to TimeLine</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>


    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>



</body>
