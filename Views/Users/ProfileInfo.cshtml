@using EAD_2.Models

@{
    ViewBag.Title = "ProfileInfo";
    User user =(User) Session["user"];
   
}

<h2>ProfileInfo</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/Login Popup/login-signup-modal-window/css/reset.css" rel="stylesheet" />
    <link href="~/Content/Login Popup/login-signup-modal-window/css/style.css" rel="stylesheet" />
    <script src="~/Content/Login Popup/login-signup-modal-window/js/modernizr.js"></script>



    <link href="~/Content/bootstrap.css" rel="stylesheet" />


    <link rel="shortcut icon" href="~/assets/img/favicon.png">
    <title>Distrilycs-DTL</title>
    <!-- Bootstrap -->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet">
    @*<link href="assets/css/bootstrap-theme.css" rel="stylesheet">*@
    <!-- siimple style -->
    <link href="~/assets/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
